<!-- Section switcher-->
<div class="row">
    <div class="col-xs-12">
        <ul class="voh-section-switcher">
            <li class="active"><a href="#download/survey"> {{ section_survey}}</a></li>
            <li ><a href="#download/country">{{ section_country }}</a></li>
        </ul>
    </div>
</div>


<!-- Selectors -->
<div class="row download-selectors">

    <!-- Indicator Container-->
    <div class="col-xs-3" data-selector="indicator">
        <div class="row">
            <div class="col-xs-12">
                  <h1> {{ selector_indicator_title }}</h1>
             </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                tree
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="btn-group" role="group" >
                    <button type="button" class="btn ">{{ selector_select_none }} </button>
                    <button type="button" class="btn ">{{ selector_select_all }} </button>
                </div>
            </div>
        </div>
    </div>
    <!-- Country Container-->
    <div class="col-xs-3" data-selector="country">
        <div class="row">
